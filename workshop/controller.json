{
    "workshop": {
        "schema": {
            "version": "2020.02.23"
        }
    },
    "userenv": {
	"name": "fedora31-crucible-controller",
	"label": "Fedora 31 Crucible Controller",
	"origin": {
	    "image": "docker.io/library/fedora",
	    "tag": "31"
	},
	"properties": {
	    "packages": {
		"type": "rpm",
		"manager": "dnf"
	    }
	}
    },
    "requirements": [
	{
	    "name": "tools",
	    "type": "distro",
	    "distro_info": {
		"packages": [
		    "which",
		    "git",
		    "perl"
		]
	    }
	},
	{
	    "name": "perl-libraries",
	    "type": "distro",
	    "distro_info": {
		"packages": [
		    "perl-DBD-SQLite",
		    "perl-Time-HiRes",
		    "perl-Thread-Queue"
		]
	    }
	}
    ]
}

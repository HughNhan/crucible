{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
	{
	    "name": "fedora31-crucible-controller",
	    "requirements": [
		"git",
		"crucible"
	    ]
	}
    ],
    "requirements": [
	{
	    "name": "git",
	    "type": "distro",
	    "distro_info": {
		"packages": [
		    "git"
		]
	    }
	},
	{
	    "name": "crucible",
	    "type": "manual",
	    "manual_info": {
		"commands": [
		    "git clone https://github.com/perftool-incubator/crucible.git /opt/crucible",
		    "/opt/crucible/bin/install"
		]
	    }
	}
    ]
}
